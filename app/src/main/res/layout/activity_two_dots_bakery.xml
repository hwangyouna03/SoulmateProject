<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Food.TwoDotsBakery"
    android:orientation="vertical">

<ScrollView
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image"
            android:src="@drawable/two_dotsbakery"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="230dp" />
    <TableLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:text="2 Dots Bakery"
                android:textStyle="bold"
                android:textSize="30sp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="맛있는 빵과 어울리는 커피 맛집"
                android:textSize="15sp" />
        </TableRow>
        <TableRow>
            <TextView
                android:textSize="5sp"/>
        </TableRow>
    </TableLayout>
    <View
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="#E5E5E5"
        android:layout_width="380dp"
        android:layout_height="0.5dp"/>
    <TableLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:text="시간"
                android:textStyle="bold"
                android:textSize="20sp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="1"
                android:text="평일"
                android:textSize="16sp"/>
            <TextView
                android:layout_weight="2"
                android:text="08:00AM ~ 23:00PM"
                android:textSize="15sp"
                android:textAlignment="inherit"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="3dp">
            <TextView
                android:layout_weight="1"
                android:text="주말"
                android:textSize="16sp"/>
            <TextView
                android:layout_weight="2"
                android:text="11:00AM ~ 23:00PM"
                android:textSize="15sp"
                android:textAlignment="inherit"/>
        </TableRow>
        <TableRow>
            <TextView
                android:textSize="5sp"/>
        </TableRow>
    </TableLayout>
    <View
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="#E5E5E5"
        android:layout_width="380dp"
        android:layout_height="0.5dp"/>
    <TableLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:text="주소"
                android:textStyle="bold"
                android:textSize="20sp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="서울 관악구 신림동 1639-4 \n신림역4번 출구에서220m"
                android:textSize="15sp"
                android:layout_marginBottom="7dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:drawableLeft="@drawable/call"
                android:text="  070-8981-0108"
                android:textSize="15sp"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="5dp"
            android:layout_span="2"
            android:gravity="center">
            <Button
                android:id="@+id/two_dots_bakery_map"
                android:layout_width="300dp"
                android:backgroundTint="@color/light_gray"
                android:text="지도 보기"
                android:textSize="15sp"
                android:textColor="@color/black"/>
        </TableRow>
        <TableRow>
            <TextView
                android:textSize="5sp"/>
        </TableRow>
    </TableLayout>
    <View
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="#E5E5E5"
        android:layout_width="380dp"
        android:layout_height="0.5dp"/>
    <TableLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:text="메뉴"
                android:textStyle="bold"
                android:textSize="20sp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="1"
                android:text="에스프레소"
                android:textSize="17sp"/>
            <TextView
                android:layout_weight="2"
                android:text="4,500원"
                android:textSize="15sp"
                android:textAlignment="inherit"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="7dp">
            <TextView
                android:layout_weight="1"
                android:text="아메리카노"
                android:textSize="17sp"/>
            <TextView
                android:layout_weight="2"
                android:text="4,500원"
                android:textSize="15sp"
                android:textAlignment="inherit"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="7dp">
            <TextView
                android:layout_weight="1"
                android:text="콜드브루"
                android:textSize="17sp"/>
            <TextView
                android:layout_weight="2"
                android:text="3,800원"
                android:textSize="15sp"
                android:textAlignment="inherit"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="7dp">
            <TextView
                android:layout_weight="1"
                android:text="더치 아인 슈페니"
                android:textSize="17sp"/>
            <TextView
                android:layout_weight="2"
                android:text="4,500원"
                android:textSize="15sp"
                android:textAlignment="inherit"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:textSize="5sp" />
        </TableRow>
    </TableLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:background="#E5E5E5"
        android:layout_width="380dp"
        android:layout_height="0.5dp"/>
    </LinearLayout>
</ScrollView>
</LinearLayout>
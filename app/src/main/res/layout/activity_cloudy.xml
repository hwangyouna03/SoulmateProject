<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Cloudy">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="660dp"
        android:gravity="center"
        android:text="오늘은 구름이 낀 날이에요 ㅠㅠ\n하늘은 우중충하지만 활기찬 하루를 보낼 수 있을 거예요.\n\n구름이 낀 오늘 같은 날,\n 장소와 음식, 옷을 추천받아보는 건 어떨까요?\n\n오늘 하루 날씨보다 더 좋은 하루 보내세요!"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center|bottom">
        <Button
            android:id="@+id/Place"
            android:backgroundTint="@color/white"
            android:textColor="#000000"
            android:drawableTop="@drawable/location"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="장소"
            android:textSize="15sp"/>
        <Button
            android:id="@+id/Food"
            android:backgroundTint="@color/white"
            android:textColor="#000000"
            android:drawableTop="@drawable/dinner"
            android:layout_marginLeft="3dp"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="음식"
            android:textSize="15sp"/>
        <Button
            android:id="@+id/Dress"
            android:backgroundTint="@color/white"
            android:textColor="#000000"
            android:drawableTop="@drawable/tshirt"
            android:layout_marginLeft="3dp"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="옷"
            android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>
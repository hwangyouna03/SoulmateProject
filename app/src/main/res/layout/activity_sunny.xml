<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Sunny">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:gravity="center"
        android:text="오늘 날씨는 맑음이에요! \n날씨가 맑은 만큼 기분 좋은 하루를 보낼 수 있겠죠?\n맑은 날씨의 하루를 잘 보내기 위한 당신을 위해 \n음식, 옷, 장소를 추천해드려요:) \n 오늘 하루도 날씨처럼 기분 좋은 하루 보내세요!"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center|bottom">
        <Button
            android:id="@+id/Place"
            android:backgroundTint="@color/white"
            android:textColor="#000000"
            android:drawableTop="@drawable/location"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="장소"
            android:textSize="15sp"/>
        <Button
            android:id="@+id/Food"
            android:backgroundTint="@color/white"
            android:textColor="#000000"
            android:drawableTop="@drawable/dinner"
            android:layout_marginLeft="3dp"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="음식"
            android:textSize="15sp"/>
        <Button
            android:id="@+id/Dress"
            android:backgroundTint="@color/white"
            android:textColor="#000000"
            android:drawableTop="@drawable/tshirt"
            android:layout_marginLeft="3dp"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="옷"
            android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>